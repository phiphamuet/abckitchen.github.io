      script(src="libs/angular/angular.js")
      script.
         var app = angular.module('myApp', []);
         app.controller('loginCtrl',function($scope,$http,$window){
         $scope.login=function(){
            $http.post('/login',$scope.form)
               .success(function(data){
                  if(data.type=='success'){
                     $window.location.href = '/user';
                  }else{
                  $scope.rp=data.content;
                  }
               })
               .error(function(data){

               })
            }
         });
      // banner
      .reservation(ng-app="myApp",ng-controller="loginCtrl")
         .container
            .reservation-form
               .col-md-12.reservation-right
                  form
                     |{{rp}}
                     h5 Tài khoản
                     input(type='text', ng-model="form.username",placeholder='Tài khoản', required='')
                     h5 Mật khẩu
                     input(type='password',ng-model="form.password",placeholder="Mật khẩu", required='')
                     button.btn1.btn-1.btn-1e(ng-click="login()") LOGIN
